{
  "extends": [
    "tslint:recommended",
    "tslint-microsoft-contrib/latest",
    "tslint-consistent-codestyle",
    "tslint-clean-code",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-sonarts",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-constant-condition": true,
    "no-default-export": false,
    "no-relative-imports": false,
    "no-duplicate-string": false,
    "export-name": false,
    "prettier": false,
    "import-name": false,
    "function-name": false,
    "no-console": false,
    "ordered-imports": false,
    "no-commented-code": false,
    "one-variable-per-declaration": false,
    "variable-name": false,
    "object-literal-sort-keys": false,
    "comment-format": false,
    "useless-assignment-to-local": false,
    "jsx-boolean-value": false,
    "no-var-requires": false,
    "max-union-size": false,
    "prefer-array-literal": false,
    "prefer-template": false,
    "array-type": false,
    "no-empty-interface": false,
    "object-shorthand-properties-first": false,
    "curly": false,
    "member-access": false,
    "member-ordering": false,
    "no-extra-semicolon": false,
    "no-use-of-empty-return-value": false,
    "no-suspicious-comment": false,
    "use-named-parameter": false,
    "react-a11y-role-has-required-aria-props": false,
    "react-a11y-no-onchange": false,
    "mocha-no-side-effect-code": false,
    "prefer-type-cast": false,
    "jsdoc-format": false,
    "no-namespace": false,
    "no-useless-cast": false,
    "no-single-line-block-comment": false,
    "react-a11y-anchors": false,
    "use-simple-attributes": false,
    "no-function-expression": false,
    "ter-prefer-arrow-callback": false
  },
  "rulesDirectory": ["tslint-plugin-prettier"],
  "linterOptions": {
    "exclude": ["/node_modules/"]
  }
}
